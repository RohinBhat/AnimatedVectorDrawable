<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="path_1"
                    android:pathData="M 3 12 L 10 5 L 11 6 L 4 13 Z"
                    android:fillColor="#000000"/>
                <path
                    android:name="path_2"
                    android:pathData="M 3 12 L 10 19 L 11 18 L 4 11 Z"
                    android:fillColor="#000000"/>
                <path
                    android:name="path_3"
                    android:pathData="M 4 11 L 21 11 L 21 13 L 4 13 Z"
                    android:fillColor="#000000"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="path_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="1000"
                android:valueFrom="M 3 12 L 10 5 L 11 6 L 4 13 Z"
                android:valueTo="M 3 6 L 21 6 L 21 8 L 3 8 Z"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="1000"
                android:valueFrom="M 4 11 L 11 18 L 10 19 L 3 12 L 4 11"
                android:valueTo="M 3 16 L 21 16 L 21 18 L 3 18 L 3 16"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="1000"
                android:valueFrom="M 4 11 L 21 11 L 21 13 L 4 13 Z"
                android:valueTo="M 3 11 L 21 11 L 21 13 L 3 13 Z"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="1000"
                android:valueFrom="0"
                android:valueTo="-180"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
